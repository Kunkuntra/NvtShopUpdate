<form class="mt-4" method="POST" action="/user/{{user._id}}?_method=PUT">
    <h3>Chỉnh sửa tài khoản</h3>
    
    <div class="form-group mt-4">
        <label for="name">Tên</label>
        <input type="text" class="form-control" id="name" value="{{user.name}}" name="name">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <textarea class="form-control" id="email" name="email">{{user.email}}</textarea>
    </div>
    <div class="form-group">
        <label for="phonenumber">Số điện thoại</label>
        <input type="text" class="form-control" id="phonenumber" value="{{user.phonenumber}}" name="phonenumber">
    </div>
    <div class="form-group">
        <label for="address">Địa chỉ</label>
        <input type="text" class="form-control" id="address" value="{{user.address}}" name="address">
    </div>
    

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>