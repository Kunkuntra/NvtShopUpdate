<div class="container mt-4">
    <h2 class="mb-4">Báo cáo doanh thu từ ngày {{dailyRevenue.dateStart}} đến ngày {{dailyRevenue.dateEnd}}</h2>
    <div class="mt-4">
        <form action="group-revenue" method="POST">
            <input type="date" id="startDate" name="startDate">
            <input type="date" id="endDate" name="endDate">
            <button type="submit" class="btn btn-primary">Nhập</button>
        </form>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Doanh thu</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Tổng doanh thu</h6>
                    <p class="card-text text-success">{{dailyRevenue.totalRevenue}} VND</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Số đơn hàng</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Tổng số đơn hàng</h6>
                    <p class="card-text text-info">{{dailyRevenue.totalOrders}}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col">
            <h4>Chi tiết đơn hàng</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Sản phẩm</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Sử dụng vòng lặp để hiển thị chi tiết đơn hàng -->
                    {{#each dailyRevenue.orderDetails}}
                        <tr>
                            <th scope="row">{{sum @index 1}}</th>
                            <td>{{this.product.name}}</td>
                            <td>{{this.quantity}}</td>
                            <td>{{this.subtotal}} VND</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    .container {
        max-width: 800px;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }
</style>
